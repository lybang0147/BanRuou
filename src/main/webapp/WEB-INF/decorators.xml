<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<!-- excludes ngoai tru url thì ko lấy layout còn lại lấy layout tương ứng -->
	<excludes>
		<pattern>/api*</pattern>
	</excludes>
	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
	<decorator name="seller" page="seller.jsp">
		<pattern>/seller*</pattern>
	</decorator>
	<decorator name="login" page="login.jsp">
		<pattern>/login</pattern>
	</decorator>
	<decorator name="member" page="member.jsp">
		<pattern>/member*</pattern>
	</decorator>
	<decorator name="registerseller" page="sellerregister.jsp">
		<pattern>/registerseller</pattern>
	</decorator>
</decorators>